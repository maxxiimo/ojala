- content_for :title do
  Forgot Password

.form-forgot-pwd
  %h2 Forgot your password?
  = form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form', class: 'form' } do |f|
    = devise_error_messages!
    %fieldset
      %legend Forgot Password
      %ol
        %li
          .form-label= f.label :email
          .form-field= f.email_field :email, autofocus: true
        %li
          .form-button= f.submit "Send me reset password instructions"
  = render "devise/shared/links"
