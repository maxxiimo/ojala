- content_for :title do
  Change Password

.form-change-pwd
  %h2 Change Password
  = form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form', class: 'form' } do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    %fieldset
      %legend Change Password
      %ol
        %li
          .form-label= f.label :password, "New password"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          .form-field= f.password_field :password, autofocus: true, autocomplete: "off"
        %li
          .form-label= f.label :password_confirmation, "Confirm new password"
          .form-field= f.password_field :password_confirmation, autocomplete: "off"
        %li
          .form-button= f.submit "Change"
  = render "devise/shared/links"
