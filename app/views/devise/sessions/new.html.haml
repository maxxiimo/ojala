- content_for :title do
  Login

.form-login
  %h2 Web Login
  = form_for resource, as: resource_name, url: session_path(resource_name), html: { role: 'form', class: 'form' } do |f|
    %fieldset
      %legend Web Login
      %ol
        %li
          .form-label= f.label :email
          .form-field= f.email_field :email, autofocus: true
        %li
          .form-label= f.label :password
          .form-field= f.password_field :password, autocomplete: "off"
        - if devise_mapping.rememberable?
          %li
            .form-checkbox
              = f.check_box :remember_me
              = f.label :remember_me
        %li
          .form-button= f.submit "Login"
  = render "devise/shared/links"
